{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ player.first_name }} {{ player.last_name }}
        </h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Stats</th>
                <th scope="col">FG%</th>
                <th scope="col">3P%</th>
                <th scope="col">FT%</th>
                <th scope="col">REB</th>
                <th scope="col">OREB</th>
                <th scope="col">DREB</th>
                <th scope="col">AST</th>
                <th scope="col">BLK</th>
                <th scope="col">STL</th>
                <th scope="col">PF</th>
                <th scope="col">TO</th>
                <th scope="col">PTS</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">Regular Season</th>
                <td>{{ player.fg_pct }}</td>
                <td>{{ player.fg3_pct }}</td>
                <td>{{ player.ft_pct }}</td>
                <td>{{ player.reb }}</td>
                <td>{{ player.oreb }}</td>
                <td>{{ player.dreb }}</td>
                <td>{{ player.ast }}</td>
                <td>{{ player.blk }}</td>
                <td>{{ player.stl }}</td>
                <td>{{ player.pf }}</td>
                <td>{{ player.turnover }}</td>
                <td>{{ player.pts }}</td>
              </tr>
            </tbody>
        </table>
        {% if player.owner == userId %}
        <div class="btn-group">

            
            <form action="/basketball/favorite/{{ player.id }}" method="POST">
                <input type="hidden" name="fg_pct" value="{{ player.fg_pct }}">
                <input type="hidden" name="fg3_pct" value="{{ player.fg3_pct }}">
                <input type="hidden" name="ft_pct" value="{{ player.ft_pct }}">
                <input type="hidden" name="reb" value="{{ player.reb }}">
                <input type="hidden" name="oreb" value="{{ player.oreb }}">
                <input type="hidden" name="dreb" value="{{ player.dreb }}">
                <input type="hidden" name="ast" value="{{ player.ast }}">
                <input type="hidden" name="blk" value="{{ player.blk }}">
                <input type="hidden" name="stl" value="{{ player.stl }}">
                <input type="hidden" name="pf" value="{{ player.pf }}">
                <input type="hidden" name="turnover" value="{{ player.turnover }}">
                <input type="hidden" name="pts" value="{{ player.pts }}">
                <input type="submit" value="Favorite" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}