{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ playerName.first }} {{ playerName.last }}
        </h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Stats</th>
                <th scope="col">FG%</th>
                <th scope="col">3P%</th>
                <th scope="col">FT%</th>
                <th scope="col">REB</th>
                <th scope="col">OREB</th>
                <th scope="col">DREB</th>
                <th scope="col">AST</th>
                <th scope="col">BLK</th>
                <th scope="col">STL</th>
                <th scope="col">PF</th>
                <th scope="col">TO</th>
                <th scope="col">PTS</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">Regular Season</th>
                <td>{{ player.data[0].fg_pct }}</td>
                <td>{{ player.data[0].fg3_pct }}</td>
                <td>{{ player.data[0].ft_pct }}</td>
                <td>{{ player.data[0].reb }}</td>
                <td>{{ player.data[0].oreb }}</td>
                <td>{{ player.data[0].dreb }}</td>
                <td>{{ player.data[0].ast }}</td>
                <td>{{ player.data[0].blk }}</td>
                <td>{{ player.data[0].stl }}</td>
                <td>{{ player.data[0].pf }}</td>
                <td>{{ player.data[0].turnover }}</td>
                <td>{{ player.data[0].pts }}</td>
              </tr>
            </tbody>
        </table>
        {% if player.owner == userId %}
        <div class="btn-group">

            
            <form action="/basketballapp/favorites/{{ player.id }}" method="POST">
                <input type="hidden" name="fg_pct" value="{{ player.data[0].fg_pct }}">
                <input type="hidden" name="fg3_pct" value="{{ player.data[0].fg3_pct }}">
                <input type="hidden" name="ft_pct" value="{{ player.data[0].ft_pct }}">
                <input type="hidden" name="reb" value="{{ player.data[0].reb }}">
                <input type="hidden" name="oreb" value="{{ player.data[0].oreb }}">
                <input type="hidden" name="dreb" value="{{ player.data[0].dreb }}">
                <input type="hidden" name="ast" value="{{ player.data[0].ast }}">
                <input type="hidden" name="blk" value="{{ player.data[0].blk }}">
                <input type="hidden" name="stl" value="{{ player.data[0].stl }}">
                <input type="hidden" name="pf" value="{{ player.data[0].pf }}">
                <input type="hidden" name="turnover" value="{{ player.data[0].turnover }}">
                <input type="hidden" name="pts" value="{{ player.data[0].pts }}">
                <input type="submit" value="Favorite" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}