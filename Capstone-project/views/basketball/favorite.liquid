{% layout 'layout.liquid'%}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ player.first_name }} {{ player.last_name }}
        </h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Stats</th>
                <th scope="col">FG%</th>
                <th scope="col">3P%</th>
                <th scope="col">FT%</th>
                <th scope="col">REB</th>
                <th scope="col">OREB</th>
                <th scope="col">DREB</th>
                <th scope="col">AST</th>
                <th scope="col">BLK</th>
                <th scope="col">STL</th>
                <th scope="col">PF</th>
                <th scope="col">TO</th>
                <th scope="col">PTS</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">Regular Season</th>
                <td>{{ player.fg_pct }}</td>
                <td>{{ player.fg3_pct }}</td>
                <td>{{ player.ft_pct }}</td>
                <td>{{ player.reb }}</td>
                <td>{{ player.oreb }}</td>
                <td>{{ player.dreb }}</td>
                <td>{{ player.ast }}</td>
                <td>{{ player.blk }}</td>
                <td>{{ player.stl }}</td>
                <td>{{ player.pf }}</td>
                <td>{{ player.turnover }}</td>
                <td>{{ player.pts }}</td>
              </tr>
            </tbody>
        </table>
        {% if player.owner == userId %}
        <div class="btn-group">
            <a href="/basketball/{{ player._id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/basketball/{{ player.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        <div class="col-md-6">
            <form action="/comment/{{player.id}}" method="POST">
                <fieldset>
                    <legend>Add Comment</legend>
                    <label class="form-label">Comment: </label>
                    <input type="text" class="form-control" name="title" placeholder="Title">
                    <input type="textarea" class="form-control" name="body" placeholder="enter comment here...">
                </fieldset>
            <input type="submit" class="btn btn-success" value="Add Comment">
            </form>
        </div>
        {% endif %}
        {% for comment in player.comments %}
            <h6>{{ comment.author.username }}</h6>
            <h6>{{ comment.title }}</h6>
            <p>{{ comment.body }}</p>
        {% endfor %}
    </article>
</div>
{% endblock %}